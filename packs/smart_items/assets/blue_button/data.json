{
  "id": "504cd7ac-2873-40d8-9172-13c9c24304b0",
  "name": "Blue Button",
  "category": "buttons",
  "tags": [
    "button"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/blue_button.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Play Activate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"trigger\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Activate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        }
      ]
    },
    "core-schema::Sync-Components": { "value": ["core::Animator", "core::AudioSource"] }
  }
}
