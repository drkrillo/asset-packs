{
  "id": "649d5d96-18be-4f89-b592-f2dfce64b7fe",
  "name": "Fantasy Lever",
  "category": "levers",
  "tags": [
    "lever"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/lever_fantasy.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Activate",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Activated\" }"
        },
        {
          "name": "Deactivate",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Deactivated\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        },
        {
          "name": "Play Activate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"activate\" }"
        },
        {
          "name": "Play Deactivate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"deactivate\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Deactivated"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Activate"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Activated"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Deactivate"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Activated"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Activate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Deactivated"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Deactivate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": [
        "Activated",
        "Deactivated"
      ],
      "defaultValue": "Deactivated"
    }
  }
}