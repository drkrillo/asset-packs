{
  "id": "43166e90-5f00-4d06-ab07-8cefae85cbd1",
  "name": "Green Light Button",
  "category": "buttons",
  "tags": [
    "button"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/green_scifi_button.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Play Activate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"trigger\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Activate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        }
      ]
    },
    "core-schema::SyncComponents": { "value": ["core::Animator", "core::AudioSource"] }
  }
}