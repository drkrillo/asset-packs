{
  "id": "bb11e1cf-bed2-4ce8-be37-fe8bf953346d",
  "name": "Ship's Wheel",
  "category": "buttons",
  "tags": [
    "button"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/ship_wheel.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Play Activate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"trigger\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Activate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        }
      ]
    }
  }
}