{
  "id": "6678fa53-038e-4722-b10a-b50cb175436b",
  "name": "Vertical Green Pad",
  "category": "platforms",
  "tags": ["platform", "vertical", "interactive"],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/vertical_green_pad.glb",
      "visibleMeshesCollisionMask": 2,
      "invisibleMeshesCollisionMask": 2
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Go to Start",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"GoingToStart\" }"
        },
        {
          "name": "Go to End",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"GoingToEnd\" }"
        },
        {
          "name": "Tween to End",
          "type": "start_tween",
          "jsonPayload": "{ \"type\": \"move_item\", \"end\": { \"x\": 0, \"y\": 10, \"z\": 0 }, \"relative\": true, \"interpolationType\": \"linear\", \"duration\": 5 }"
        },
        {
          "name": "Tween to Start",
          "type": "start_tween",
          "jsonPayload": "{ \"type\": \"move_item\", \"end\": { \"x\": 0, \"y\": -10, \"z\": 0 }, \"relative\": true, \"interpolationType\": \"linear\", \"duration\": 5 }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "GoingToStart"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Tween to Start"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "GoingToEnd"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Tween to End"
            }
          ]
        },
        {
          "type": "on_tween_end",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "GoingToEnd"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Go to Start"
            }
          ]
        },
        {
          "type": "on_tween_end",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "GoingToStart"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Go to End"
            }
          ]
        },
        {
          "type": "on_spawn",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Tween to End"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": ["GoingToEnd", "GoingToStart"],
      "defaultValue": "GoingToEnd"
    },
    "core-schema::SyncComponents": { "value": ["core::Tween"] }
  }
}
